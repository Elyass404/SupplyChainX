<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- Create raw_material table -->
    <changeSet id="003-1-create-raw-material-table" author="ilyass mar">
        <createTable tableName="raw_material">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="stock" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="stock_min" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create supplier_raw_material junction table -->
    <changeSet id="003-2-create-supplier-raw-material-table" author="ilyass mar">
        <createTable tableName="supplier_raw_material">
            <column name="raw_material_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="raw_material_id, supplier_id"
                tableName="supplier_raw_material"
                constraintName="pk_supplier_raw_material"/>
    </changeSet>

    <!-- Add foreign keys for supplier_raw_material -->
    <changeSet id="003-3-add-supplier-raw-material-fks" author="ilyass mar">
        <addForeignKeyConstraint
                baseTableName="supplier_raw_material"
                baseColumnNames="raw_material_id"
                referencedTableName="raw_material"
                referencedColumnNames="id"
                constraintName="fk_srm_raw_material"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="supplier_raw_material"
                baseColumnNames="supplier_id"
                referencedTableName="suppliers"
                referencedColumnNames="id"
                constraintName="fk_srm_supplier"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
