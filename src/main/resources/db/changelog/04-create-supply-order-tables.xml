<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="004-1-create-supply-order-table" author="ilyass mar">
        <createTable tableName="supply_order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="supply_order"
                baseColumnNames="supplier_id"
                referencedTableName="suppliers"
                referencedColumnNames="id"
                constraintName="fk_supply_order_supplier"
                onDelete="RESTRICT"/>

    </changeSet>

    <changeSet id="004-2-create-supply-order-material-table" author="ilyass mar">
        <createTable tableName="supply_order_material">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supply_order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="raw_material_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="supply_order_material" columnNames="supply_order_id, raw_material_id" constraintName="uc_som_order_material"/>
    </changeSet>

    <changeSet id="004-3-add-supply-order-material-fks" author="ilyass mar">
        <addForeignKeyConstraint
                baseTableName="supply_order_material"
                baseColumnNames="supply_order_id"
                referencedTableName="supply_order"
                referencedColumnNames="id"
                constraintName="fk_som_supply_order"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="supply_order_material"
                baseColumnNames="raw_material_id"
                referencedTableName="raw_material"
                referencedColumnNames="id"
                constraintName="fk_som_raw_material"
                onDelete="RESTRICT"/>

    </changeSet>

</databaseChangeLog>