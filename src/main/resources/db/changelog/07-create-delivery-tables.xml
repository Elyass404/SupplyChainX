<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="07-1" author="ilyass mar">
        <createTable tableName="customers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="07-2" author="ilyass mar">
        <createTable tableName="customer_orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantity" type="INT"><constraints nullable="false"/></column>
            <column name="status" type="VARCHAR(50)"><constraints nullable="false"/></column>
            <column name="order_date" type="DATE"><constraints nullable="false"/></column>
            <column name="customer_id" type="BIGINT"><constraints nullable="false"/></column>
            <column name="product_id" type="BIGINT"><constraints nullable="false"/></column>
        </createTable>
    </changeSet>

    <changeSet id="07-3" author="ilyass mar">
        <addForeignKeyConstraint baseTableName="customer_orders"
                                 baseColumnNames="customer_id"
                                 constraintName="fk_order_customer"
                                 referencedTableName="customers"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="customer_orders"
                                 baseColumnNames="product_id"
                                 constraintName="fk_order_product"
                                 referencedTableName="production_products"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="07-4" author="ilyass mar">
        <createTable tableName="deliveries">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="vehicle" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="driver" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="status" type="VARCHAR(50)"><constraints nullable="false"/></column>
            <column name="delivery_address" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="delivery_date" type="DATE"><constraints nullable="false"/></column>
            <column name="cost" type="DOUBLE"><constraints nullable="false"/></column>
            <column name="order_id" type="BIGINT"><constraints nullable="false"/></column>
        </createTable>

        <addUniqueConstraint tableName="deliveries"
                             columnNames="order_id"
                             constraintName="uk_delivery_order_id"/>
    </changeSet>

    <changeSet id="07-5" author="ilyass mar">
        <addForeignKeyConstraint baseTableName="deliveries"
                                 baseColumnNames="order_id"
                                 constraintName="fk_delivery_order"
                                 referencedTableName="customer_orders"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>